.xx-warp {
  height: 100vh;
  width: 100vw;
  background: #F6F6F6;
}
.xx-warp .xx-warp-hd {
  height: 360rpx;
  background: #26273A;
  padding: 42rpx;
}
.xx-warp .xx-warp-hd .xx-moneyBoxbg {
  width: calc(100vw - 100rpx);
  height: 360rpx;
  border-radius: 0 0 360rpx 0;
  background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(50, 51, 81, 0.81)), to(rgba(54, 56, 86, 0)));
  background-image: -webkit-linear-gradient(top, rgba(50, 51, 81, 0.81), rgba(54, 56, 86, 0));
  background-image: linear-gradient(to bottom, rgba(50, 51, 81, 0.81), rgba(54, 56, 86, 0));
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}
.xx-warp .xx-warp-hd .xx-moneyBox {
  position: relative;
  z-index: 200;
}
.xx-warp .xx-warp-hd .xx-moneyBox .xx-money-line {
  width: 100%;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
}
.xx-warp .xx-warp-hd .xx-money-tab .xx-money-tab-item-order {
  width: 2rpx;
  height: 22rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 10rpx 30rpx 0 30rpx;
}
.xx-warp .xx-warp-bd .xx-money-time {
  margin: 24rpx;
}

